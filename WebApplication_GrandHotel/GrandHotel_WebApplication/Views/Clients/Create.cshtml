@model GrandHotel_WebApplication.Models.CreationClientVM

@{
    ViewData["Title"] = "Création du compte";
    Layout = "_LayoutCreation";
}

<hr />

<h3 class="text-danger">@Html.DisplayFor(Model => Model.StatusMessage)</h3>
<div class="container-fluid row " id="detail">
    <h2>@ViewData["Title"]</h2>
    <br /><br />
    <div class="col-lg-offset-4 col-md-6">

        <form asp-controller="Clients" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Civilite" class="control-label"></label>
                <select asp-for="Civilite" class="form-control">
                    <option value="M">M</option>
                    <option value="Mme">Mme</option>
                    <option value="Mlle">Mlle</option>
                </select>
                <span asp-validation-for="Civilite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenom" class="control-label"></label>
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdresseRue" class="control-label"></label>
                <input asp-for="AdresseRue" class="form-control" />

                <label asp-for="AdresseCodePostal" class="control-label"></label>
                <input asp-for="AdresseCodePostal" class="form-control" />
                <span asp-validation-for="AdresseCodePostal" class="text-danger"></span>

                <label asp-for="AdresseVille" class="control-label"></label>
                <span><input asp-for="AdresseVille" class="form-control" /> </span>

            </div>

            <div class="form-group">
                <label asp-for="TelephoneDom" class="control-label"></label>
                <input asp-for="TelephoneDom" class="form-control" />
                <span asp-validation-for="TelephoneDom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="ProDom" class="control-label"></label>
                    </div>
                    <div class="col-sm-1" style="float:left">
                        <input asp-for="ProDom" class="form-control" />
                    </div>

                    <span asp-validation-for="ProDom" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TelephonePort" class="control-label"></label>
                <input asp-for="TelephonePort" class="form-control" />
                <span asp-validation-for="TelephonePort" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="ProPort" class="control-label"></label>
                    </div>
                    <div class="col-sm-1">
                        <input asp-for="ProPort" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="ProPort" class="text-danger"></span>
            </div>


            <div class="form-inline form-group col-md-3 col-sm-3">
                <input type="submit" value="Enregistrer" class="btn btn-primary center-block" />
            </div>
        </form>
        <br /><br /><br /><br />

        <div class="form-inline form-group col-md-3 col-sm-3">
            <a  asp-action="Index" asp-controller="Home" class="btn btn-primary center-block">Annuler</a>
        </div>
    </div>

    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
    <br /><br /><br /><br /><br /><br />
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
