    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            @*<img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />*@
            <img src="~/images/image1.jpg" class="img-responsive" style="width:1100px; height:500px" />
            @*<img src="~/images/image1.jpg"  class="img-responsive"/>*@
            <div class="carousel-caption" role="option">
                <p>
                    <h1>GRAND HOTEL</h1>
                    @*<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                            Learn More
                        </a>*@
                </p>
            </div>
        </div>
        <div class="item">
            @*<img src="~/images/banner2.svg" alt="Visual Studio" class="img-responsive" />*@
            <img src="~/images/images2.jpg" style="width:1100px; height:500px" />
            <div class="carousel-caption" role="option">
                <p>
                    <h1>GRAND HOTEL</h1>
                    @*<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                            Learn More
                        </a>*@
                </p>
            </div>
        </div>
        <div class="item">
            @*<img src="~/images/banner3.svg" alt="Package Management" class="img-responsive" />*@
            <img src="~/images/images3.jpg" class="img-responsive" style="width:1100px; height:500px" />
            <div class="carousel-caption" role="option">
                <p>
                    <h1>GRAND HOTEL</h1>
                </p>
            </div>
        </div>
        <div class="item">
            @*<img src="~/images/banner3.svg" alt="Package Management" class="img-responsive" />*@
            <img src="~/images/images4.jpg" class="img-responsive" style="width:1100px; height:500px" />
            <div class="carousel-caption" role="option">
                <p>
                    <h1>GRAND HOTEL</h1>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Précédent</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Suivant</span>
    </a>
</div>

<div class="row">
    <br />
    <br />
    <div class="col-md-3">
        <a asp-area="" asp-controller="Reservations" asp-action="Index" class="btn btn-info btn-lg" role="button">
