@model GrandHotel_WebApplication.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="VerifDisponibilité">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Jour" class="control-label"></label>
                <input asp-for="Jour" class="form-control" />
                <span asp-validation-for="Jour" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NbNuit" class="control-label"></label>
                <input asp-for="NbNuit" class="form-control" type="number" min="1"/>
                <span asp-validation-for="NbNuit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NbPersonnes" class="control-label"></label>
                <input asp-for="NbPersonnes" class="form-control" />
                <span asp-validation-for="NbPersonnes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HeureArrivee" class="control-label"></label>
                <input asp-for="HeureArrivee" class="form-control" type="number" min="1" max="24"/>
                <span asp-validation-for="HeureArrivee" class="text-danger"></span>
            </div> 

            <div class="form-group">
                <label asp-for="Travail" class="control-label"></label>
                <select asp-for="Travail">
                    <option value="null">""</option>
                    <option value="true">Oui</option>
                    <option value="false">Autres</option>
                </select>
                <span asp-validation-for="Travail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Verification Disponibilité" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
