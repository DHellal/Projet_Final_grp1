@model GrandHotel_WebApplication.Models.Chambre

@{
    ViewData["Title"] = "Edit";
}

@*<h2>Edit</h2>*@

<h2 style="text-align:center">Modification des données de la chambre @ViewBag.id</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Numero" />
            <div class="form-group">
                <label asp-for="Etage" class="control-label"></label>
                <input asp-for="Etage" class="form-control" />
                <span asp-validation-for="Etage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Bain" /> @Html.DisplayNameFor(model => model.Bain)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Douche" class="control-label"></label>
                <input asp-for="Douche" class="form-control" />
                <span asp-validation-for="Douche" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wc" class="control-label"></label>
                <input asp-for="Wc" class="form-control" />
                <span asp-validation-for="Wc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NbLits" class="control-label"></label>
                <input asp-for="NbLits" class="form-control" />
                <span asp-validation-for="NbLits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumTel" class="control-label"></label>
                <input asp-for="NumTel" class="form-control" />
                <span asp-validation-for="NumTel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enrégistrer" class="btn btn-default glyphicon"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-Lettre="@ViewBag.EditStatus">Retour</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
