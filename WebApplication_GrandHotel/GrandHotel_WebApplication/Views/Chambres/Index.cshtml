
@model ChambreVM

@{
    ViewData["Title"] = "Index";
}

<h2 style="text-align:center">Liste des Chambres</h2>


@* Filtrage sur l'état d'occupation de la chambre à la date du jour *@
<form asp-controller="Chambres" asp-action="Index" method="get" style="text-align:center">
    <p>Date du jour @DateTime.Today.ToString("yyyy-MM-dd")</p>
    <p>
        <span>Chambres</span>
        <select asp-for="StatusChambre">
            <option value="Null">Toutes</option>
            <option value="Occupe">Occupées</option>
            <option value="NonOccupe">Libres</option>
        </select>
        <input type="submit" value="Filtrer" />
    </p>
</form>
<br />
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Chambre.First().Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chambre.First().Etage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chambre.First().NbLits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chambre.First().Tarifc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Chambre)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NbLits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tarifc)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Numero" asp-route-status="@ViewBag.stat">Editer</a> |*@
                <a asp-action="Details" asp-route-id="@item.Numero" asp-route-status="@ViewBag.stat">
                    <span class="glyphicon glyphicon-list-alt"></span> Détails</a> 
                @*<a asp-action="Delete" asp-route-id="@item.Numero" asp-route-status="@ViewBag.stat">Supprimer</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>

